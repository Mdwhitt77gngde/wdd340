<!-- views/account/login.ejs -->
<%- include('../partials/header') %>

<main>
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <%- messages() %>

  <form action="/account/login" method="post" class="login-form"   >
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required>

    <label for="account_password">Password:</label>
    <input type="password" id="account_password" name="account_password" required>

    <button type="submit">Login</button>
  </form>

  <p class="signup-link">
    No account? <a href="/account/register">Sign-up</a> <!-- FIX: updated href to registration route -->
  </p>
</main>

<%- include('../partials/footer') %>