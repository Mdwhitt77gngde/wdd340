<!-- views/inventory/add-classification.ejs -->
<%- include('../partials/header') %>
<%- include('../partials/navigation', { nav: nav }) %>
<main class="content-container">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <%- messages() %>

  <!-- Validation errors -->
  <% if (errors) { %>
    <ul class="errors">
      <% errors.array().forEach(err => { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-classification" method="post" class="form">
    <label for="classification_name">Classification Name:</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="[A-Za-z0-9]+"
      placeholder="No spaces or specials"
      value="<%= data.classification_name || '' %>"
    >

    <button type="submit">Add Classification</button>
  </form>
</main>
<%- include('../partials/footer') %>
